## Navigation (cmd + ctrl - ...)
# Space Navigation: cmd - {1, 2, 3, 4, 0}
cmd + ctrl - 1 : yabai -m space --focus 1
cmd + ctrl - 2 : yabai -m space --focus 2
cmd + ctrl - 3 : yabai -m space --focus 3
cmd + ctrl - 4 : yabai -m space --focus 4
cmd + ctrl - 0 : yabai -m space --focus recent

# Window Navigation: cmd + ctrl - {h, j, k, l}
cmd + ctrl - h    : yabai -m window --focus west
cmd + ctrl - j    : yabai -m window --focus south
cmd + ctrl - k    : yabai -m window --focus north
cmd + ctrl - l    : yabai -m window --focus east
cmd + ctrl - o    : yabai -m window --focus recent

# Rotate tree
cmd + ctrl - r : yabai -m space --rotate 90

# Equalize size of windows
cmd + ctrl - e : yabai -m space --balance

# Enable / Disable gaps in current workspace
cmd + ctrl - g : yabai -m space --toggle padding; yabai -m space --toggle gap

## Misc (cmd - ...)
# Open terminal
cmd - return : /Applications/Kitty.app/Contents/MacOS/kitty --single-instance -d ~ &> /dev/null

# Open mpv with url from clipboard
cmd - m : open -na /Applications/mpv.app $(pbpaste)


# Extended Window Navigation: alt - {h, ä}
# alt -    h : yabai -m window --focus first
# alt - 0x27 : yabai -m window --focus  last

# Make window zoom to fullscreen: cmd + ctrl - f
cmd + ctrl - f : yabai -m window --toggle zoom-fullscreen; sketchybar --trigger window_focus

## Window Movement (cmd + shift - ...)
# Moving windows in spaces: cmd + shift - {h, j, k, l}
cmd + shift - h : yabai -m window --swap west
cmd + shift - j : yabai -m window --swap south
cmd + shift - k : yabai -m window --swap north
cmd + shift - l : yabai -m window --swap east

# Moving windows between spaces: cmd + shift - {1, 2, 3, 4, p, n }
cmd + shift - 1 : yabai -m window --space 1
cmd + shift - 2 : yabai -m window --space 2
cmd + shift - 3 : yabai -m window --space 3
cmd + shift - 4 : yabai -m window --space 4
cmd + shift - p : yabai -m window --space prev; yabai -m space --focus prev
cmd + shift - n : yabai -m window --space next; yabai -m space --focus next

# Mirror Space on X and Y Axis: cmd + ctrl - {x, y}
# cmd + shift - x : yabai -m space --mirror x-axis
# cmd + shift - y : yabai -m space --mirror y-axis


## Resize (shift +  - ...)
# Resize windows: shift + alt - {j, k, l, ö}
shift + alt - h    : yabai -m window --resize left:-50:0;  yabai -m window --resize right:-50:0
shift + alt - j    : yabai -m window --resize bottom:0:50; yabai -m window --resize top:0:50
shift + alt - k    : yabai -m window --resize top:0:-50;   yabai -m window --resize bottom:0:-50
shift + alt - l : yabai -m window --resize right:50:0;  yabai -m window --resize left:50:0
